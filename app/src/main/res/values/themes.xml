<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyPsikolog" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sky_blue</item>
        <item name="colorSecondaryVariant">@color/sky_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyPsikolog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyPsikolog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MyPsikolog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_style_bold">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="text_style_light">

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>

    </style>
</resources>