<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.myapps.mypsikolog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/Theme.MyPsikolog">
        <activity android:name=".ui.calling.VideoCallActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.calling.SendingInvitationActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.calling.IncomingInvitationActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".consult.ConsultActivity"
            android:theme="@style/Theme.MyPsikolog.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.order.OrderActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".psychology.PsychologActivity"
            android:theme="@style/Theme.MyPsikolog.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".home.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyPsikolog.NoActionBar">

        </activity>

        <activity
            android:name=".ui.signup.SignUpActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.signin.SignInActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.AfterSplashActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.splashscreen.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".firebase.MessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>